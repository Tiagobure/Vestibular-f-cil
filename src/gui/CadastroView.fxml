<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #ffebee;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.CadastroViewController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Cadastro" />
    <TextField fx:id="campoNome" promptText="Nome" style="-fx-pref-width: 200px;" />
    <PasswordField fx:id="campoSenha" promptText="Senha" style="-fx-pref-width: 200px;" />
    <Button fx:id="botaoCadastrar" onAction="#cadastrarUsuario" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-size: 14px;" text="Cadastrar" />
</VBox>

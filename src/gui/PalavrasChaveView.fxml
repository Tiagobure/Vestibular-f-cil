<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PalavraChaveViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Adicionar Palavra-Chave" />

    <!-- Campo Palavra-Chave -->
    <TextField fx:id="campoPalavra" promptText="Palavra-Chave" style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />

    <!-- Campo Descrição -->
    <TextArea fx:id="campoDescricao" promptText="Descrição" style="-fx-pref-width: 300px; -fx-pref-height: 100px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" wrapText="true" />

    <!-- Campos Matéria e Assunto -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="campoMateria" promptText="Matéria" style="-fx-pref-width: 145px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
        <TextField fx:id="campoAssunto" promptText="Assunto" style="-fx-pref-width: 145px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
    </HBox>

    <!-- Botão Salvar -->
    <Button onAction="#salvarPalavraChaveAction" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 150px; -fx-padding: 10px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Salvar" />
</VBox>

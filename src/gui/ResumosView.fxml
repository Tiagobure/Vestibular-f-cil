<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20; -fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ResumosViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Criar Resumo" />

    <!-- Campo Título -->
    <TextField fx:id="campoTitulo" promptText="Título" style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />

    <!-- Campo Texto -->
    <TextArea fx:id="campoTexto" promptText="Digite seu resumo aqui..." style="-fx-pref-width: 300px; -fx-pref-height: 200px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" wrapText="true" />

    <!-- Campos Matéria e Assunto -->
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="campoMateria" promptText="Matéria" style="-fx-pref-width: 145px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
        <TextField fx:id="campoAssunto" promptText="Assunto" style="-fx-pref-width: 145px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />
    </HBox>

    <!-- Campo Anexo -->
    <TextField fx:id="campoAnexo" promptText="Anexo (link ou caminho do arquivo)" style="-fx-pref-width: 300px; -fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />

    <!-- Botão Salvar -->
    <Button onAction="#salvarResumo" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 150px; -fx-padding: 10px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Salvar Resumo" />
</VBox>

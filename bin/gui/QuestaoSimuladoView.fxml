<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="20" alignment="CENTER" 
      style="-fx-padding: 30px; -fx-background-color: #f7f7f7;">

    <!-- Label do Tempo -->
    <Label fx:id="labelTempo" 
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />

    <!-- Label da Quest찾o -->
    <Label fx:id="labelQuestao" wrapText="true" 
           style="-fx-text-fill: #333333; -fx-font-size: 16px; -fx-background-color: #ffffff; 
                  -fx-padding: 15px; -fx-border-radius: 10px; -fx-border-color: #ddd; 
                  -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />

    <!-- Container das Alternativas -->
    <VBox fx:id="containerAlternativas" spacing="12" 
          style="-fx-padding: 10px; -fx-background-color: #ffffff; -fx-border-radius: 10px; 
                 -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);">
        <!-- As alternativas ser찾o adicionadas dinamicamente aqui -->
    </VBox>

    <!-- Bot천es -->
    <VBox spacing="10" alignment="CENTER">
        <Button text="Confirmar Resposta" onAction="#confirmarResposta" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; 
                       -fx-font-size: 16px; -fx-pref-width: 220px; 
                       -fx-padding: 12px; -fx-border-radius: 10px; 
                       -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);" />

        <Button text="Pr처xima" onAction="#proximaQuestao" 
                style="-fx-background-color: #ff5252; -fx-text-fill: white; 
                       -fx-font-size: 16px; -fx-pref-width: 220px; 
                       -fx-padding: 12px; -fx-border-radius: 10px; 
                       -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);" />

        <Button text="Sair do Simulado" onAction="#sairSimulado"
                style="-fx-background-color: #616161; -fx-text-fill: white; 
                       -fx-font-size: 14px; -fx-pref-width: 180px; 
                       -fx-padding: 10px; -fx-border-radius: 10px; 
                       -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);" />
    </VBox>

</VBox>

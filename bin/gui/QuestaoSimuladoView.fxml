<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20"
	style="-fx-padding: 30px; -fx-background-color: #f7f7f7;"
	xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="gui.QuestaoSimuladoViewController">

	<!-- Label do Tempo -->
	<Label fx:id="labelTempo"
		style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" />

	<!-- Label para exibir mensagens de feedback -->
	<Label fx:id="labelMensagem"
		style="-fx-font-size: 14px; -fx-text-fill: red;" />

	<!-- ImageView da Questão -->
	<ImageView fx:id="imagemQuestao" fitHeight="300.0"
		fitWidth="500.0" preserveRatio="true"
		style="-fx-effect: dropshadow(three-pass-box, #0000001A, 5, 0, 0, 1);">
		<VBox.margin>
			<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
		</VBox.margin>
	</ImageView>

	<!-- Container das Alternativas com ScrollPane -->
	<ScrollPane fx:id="containerAlternativas" fitToWidth="true"
		style="-fx-background-color: #ffffff; -fx-border-radius: 10px; -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, #0000001A, 5, 0, 0, 1);">
		<GridPane fx:id="gride" prefHeight="150.0" prefWidth="500.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<RadioButton fx:id="alternativaA"
					style="-fx-text-fill: black; -fx-font-size: 14px;" text="A">
					<GridPane.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</GridPane.margin>
					<toggleGroup>
						<ToggleGroup fx:id="grupoAlternativas" />
					</toggleGroup>
				</RadioButton>
				<RadioButton fx:id="alternativaB"
					style="-fx-text-fill: black; -fx-font-size: 14px;" text="B"
					toggleGroup="$grupoAlternativas" GridPane.columnIndex="1">
					<GridPane.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</GridPane.margin>
				</RadioButton>
				<RadioButton fx:id="alternativaC"
					style="-fx-text-fill: black; -fx-font-size: 14px;" text="C"
					toggleGroup="$grupoAlternativas" GridPane.columnIndex="2">
					<GridPane.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</GridPane.margin>
				</RadioButton>
				<RadioButton fx:id="alternativaD"
					style="-fx-text-fill: black; -fx-font-size: 14px;" text="D"
					toggleGroup="$grupoAlternativas" GridPane.columnIndex="3">
					<GridPane.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</GridPane.margin>
				</RadioButton>
				<RadioButton fx:id="alternativaE"
					style="-fx-text-fill: black; -fx-font-size: 14px;" text="E"
					toggleGroup="$grupoAlternativas" GridPane.columnIndex="4">
					<GridPane.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</GridPane.margin>
				</RadioButton>
			</children>
		</GridPane>
	</ScrollPane>

	<!-- Botões -->
	<VBox alignment="CENTER" spacing="10">
		<Button fx:id="btConfirma" onAction="#confirmarResposta"
			style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px; -fx-padding: 12px; -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, #0000001A, 6, 0, 0, 2);"
			text="Confirmar Resposta" />
		<Button fx:id="btProxima" onAction="#proximaQuestao"
			style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 220px; -fx-padding: 12px; -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, #0000001A, 6, 0, 0, 2);"
			text="Próxima" />
		<Button fx:id="btSair" onAction="#sairSimulado"
			style="-fx-background-color: #616161; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 180px; -fx-padding: 10px; -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, #0000001A, 6, 0, 0, 2);"
			text="Sair do Simulado" />
	</VBox>
</VBox>
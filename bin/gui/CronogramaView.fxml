<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.CronogramaViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Cronograma de Estudos" />

    <!-- Campos de Entrada -->
    <TextField fx:id="campoDiaSemana" promptText="Dia da Semana" style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px;                        -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd;                        -fx-focus-color: #ff5252; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" />
    
    <TextField fx:id="campoHorario" promptText="Horário" style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px;                        -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd;                        -fx-focus-color: #ff5252; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" />
    
    <TextField fx:id="campoMateria" promptText="Matéria" style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px;                        -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd;                        -fx-focus-color: #ff5252; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" />
    
    <TextField fx:id="campoAssunto" promptText="Assunto" style="-fx-pref-width: 250px; -fx-font-size: 14px; -fx-padding: 10px;                        -fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-border-color: #ddd;                        -fx-focus-color: #ff5252; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" />

    <!-- Botão Salvar -->
    <Button fx:id="btSalvar" onAction="#salvarBloco" style="-fx-background-color: #ff5252; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;                     -fx-padding: 10px; -fx-border-radius: 5px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Salvar Bloco" />
</VBox>

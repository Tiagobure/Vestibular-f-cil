<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MostrarCronogramaViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Cronograma de Estudos" />

    <!-- Lista de Cronogramas -->
    <ListView fx:id="listaCronograma" style="-fx-pref-width: 400px; -fx-pref-height: 300px; -fx-background-color: #ffffff; -fx-border-radius: 5px;                       -fx-border-color: #ddd; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0, 0, 1);" />

    <!-- Botões -->
    <VBox alignment="CENTER" spacing="10">

        <HBox alignment="CENTER" spacing="10">
            <!-- Botão Novo Cronograma -->
            <Button fx:id="novoCronogramaButton" onAction="#abrirCadastroCronograma" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;                             -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px;                             -fx-border-color: #4CAF50; -fx-focus-color: #4CAF50;                             -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Novo Cronograma" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <!-- Botão Editar Cronograma -->
            <Button fx:id="editarCronogramaButton" onAction="#editarCronograma" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;                             -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px;                             -fx-border-color: #ff9800; -fx-focus-color: #ff9800;                             -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Editar Cronograma" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <!-- Botão Deletar Cronograma -->
            <Button fx:id="deletarCronogramaButton" onAction="#deletarCronograma" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;                             -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px;                             -fx-border-color: #f44336; -fx-focus-color: #f44336;                             -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 5, 0, 0, 1);" text="Deletar Cronograma" />
        </HBox>
    </VBox>
</VBox>

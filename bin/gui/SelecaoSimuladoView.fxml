<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 30px; -fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/231" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SelecaoSimuladoViewController">

    <!-- Título -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="Selecione o Simulado" />

    <!-- Botão FUVEST -->
    <Button fx:id="btFuvest" onAction="#iniciarFUVEST" style="-fx-background-color: #ff5252; -fx-text-fill: white;                     -fx-font-size: 16px; -fx-pref-width: 250px;                     -fx-padding: 12px; -fx-border-radius: 10px;                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);">
        FUVEST
    </Button>

    <!-- Botão ENEM -->
    <Button fx:id="btEnem" onAction="#iniciarENEM" style="-fx-background-color: #4CAF50; -fx-text-fill: white;                     -fx-font-size: 16px; -fx-pref-width: 250px;                     -fx-padding: 12px; -fx-border-radius: 10px;                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);">
        ENEM
    </Button>

    <!-- Botão VOLTAR -->
    <Button fx:id="btVoltar" onAction="#voltarMenu" style="-fx-background-color: #616161; -fx-text-fill: white;                     -fx-font-size: 14px; -fx-pref-width: 150px;                     -fx-padding: 10px; -fx-border-radius: 10px;                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 6, 0, 0, 2);">
        Voltar
    </Button>

</VBox>
